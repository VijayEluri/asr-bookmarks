function installXPI()
{
    if (typeof(InstallTrigger) != 'undefined')
    {
        var xpi = {'FireBug': 'http://www.joehewitt.com/software/firebug/releases/firebug0.4.1.xpi'};
        InstallTrigger.install(xpi);
        return false;
    }
    else
        return true;
}

function randomizeImage()
{
    var images = ["headerConsole.png", "headerInspector.png", "headerDebugger.png"];
    var index = Math.floor(Math.random() * images.length);
    document.getElementById("headerImage").src = images[index];
}

</script>

