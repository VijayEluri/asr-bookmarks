<h2>photos</h2>
</div>

<script>
function jsonFlickrFeed(doc) {
  lst = doc.items;
  c = document.getElementById('flickr');
  for (var i=0, post; i < 3; i++) {
    post = lst[i];
    c.innerHTML += '<p><a style="border-bottom: none" href="' + post.link + '"><img src="' + post.media.m + '" title="' + post.title + '"/></a></p>'
  }
}
</script>
