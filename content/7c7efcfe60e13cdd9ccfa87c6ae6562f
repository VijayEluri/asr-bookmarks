function twitter_publish(tweets) { 
  c = document.getElementById('tweet_container');
  for (tweet in tweets) { 
    tweet = tweets[tweet];
    if (tweet.text) { 
      tweet.text = tweet.text.replace(r_url, '<a href="$1">link</a>')
      out += tweet.text + '<br />'
    }
    c.innerHTML += '<p>' + tweet.text + '</p>'
  }
}
