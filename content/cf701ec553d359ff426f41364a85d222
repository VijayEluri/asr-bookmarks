<script>
function change_thumbnail(filename, caption, ruleset_uri) {
    var image_div = document.getElementById("thumbnail-image-div");
    // Update the image
    var image;
    if (image = document.getElementById("thumbnail-image")) {
        image.parentNode.removeChild(image);
    }
    image = document.createElement("img");
    image.setAttribute("id", "thumbnail-image");
    image.setAttribute("src", "/games/screenshots/thumbnails/" + filename);
    image_div.appendChild(image);
    // Update the caption
    var caption_p = document.getElementById("thumbnail-caption");    
    caption_p.removeChild(caption_p.firstChild);
    var new_text_node = document.createTextNode(caption);
    caption_p.appendChild(new_text_node);
    // Update the image's hyperlink
    document.getElementById("thumbnail-link").setAttribute("href", "/games/gamefinder/ruleset.html?uri=" + ruleset_uri);
}
</script>



