      // Read any Publishing actions stored in the flash object
      function getFromCookie(){
        var action = Flash.data.account_action_to_publish;
        if(action && action.data) {
          if(action.data.attachment.name){
              action.data.attachment.name = decodeURIComponent(action.data.attachment.name.replace(/\+/g,  " "));
          }
          if(action.data.attachment.name){
            action.data.attachment.description = decodeURIComponent(action.data.attachment.description.replace(/\+/g,  " "));
          }
          FB.Connect.streamPublish('', action.data.attachment, action.data.action_link);
        }
      }
    </script>

