  $(document).ready(function(){
    /* keep slideshop hidden until the last minute,
       so that no garbage is shown if javascript is disabled */
    $("#complexheader div.container").css("display","inline");
    $idout=0;
    $idin=0;

// fix the "read more" png on IE6 only.
if ($.browser.msie && /* IE6 */ ((window.XMLHttpRequest == undefined) && (ActiveXObject != undefined))) {
$("#complexheader div.ddblock-cycle-upright50 div.slide-read-more a").each(function(){
			var bgIMG = jQuery(this).css('background-image');
			if(bgIMG.indexOf(".png")!=-1){
				var iebg = bgIMG.split('url("')[1].split('")')[0];
				jQuery(this).css('background-image', 'none');
				jQuery(this).get(0).runtimeStyle.filter = "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='" + iebg + "',sizingMethod='crop') progid:DXImageTransform.Microsoft.Alpha(opacity=100)";
// add Alpha(opacity=100) to get the white text
			}
		});
}

    $("div #suckerfishmenu div.content").hoverIntent(function(){
      $idin=setTimeout('if ($.browser.msie) {$("#complexheader div.container-inner, #complexheader div.slide").fadeTo("fast",0.23);} else if (jQuery.support.opacity && !(navigator.platform.indexOf("Linux")!=-1 && $.browser.mozilla)) {$("#complexheader div.container-inner").fadeTo("fast",0.23);} /*else if (jQuery.support.opacity) {$("#complexheader div.container-inner").css("opacity",0.23);} else {$("#ddblock-6").hide();}*/',30);
      clearTimeout($idout);
      $('#ddblock-6 div.slide').parent().cycle('pause');
    },function(){
      clearTimeout($idin);
      $idout=setTimeout('if ($.browser.msie) {$("#complexheader div.container-inner, #complexheader div.slide").fadeTo("fast",1,function(){this.style.removeAttribute("filter");});} else if (jQuery.support.opacity && !(navigator.platform.indexOf("Linux")!=-1 && $.browser.mozilla)) {$("#complexheader div.container-inner").fadeTo("fast",1);} /*else if (jQuery.support.opacity) {$("#complexheader div.container-inner").css("opacity",1);} else {$("#ddblock-6").show();}*/',730);
      $('#ddblock-6 div.slide').parent().cycle('resume');
    });

    $(document).click(function(){
      clearTimeout($idin);
      if ($.browser.msie) {$("#complexheader div.container-inner, #complexheader div.slide").fadeTo(1,1,function(){this.style.removeAttribute("filter");});} else if (jQuery.support.opacity && !(navigator.platform.indexOf("Linux")!=-1 && $.browser.mozilla)) {$("#complexheader div.container-inner").fadeTo(1,1);} /*else if (jQuery.support.opacity) {$("#complexheader div.container-inner").css("opacity",1);} else {$("#ddblock-6").show();}*/ ;
      $('#ddblock-6 div.slide').parent().cycle('resume');
    });

  });
</script>
